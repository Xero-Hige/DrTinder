<?xml version="1.0" encoding="utf-8"?>
<com.daprlabs.cardstack.SwipeCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:swipedeck="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.daprlabs.cardstack.SwipeDeck
        android:id="@+id/swipe_deck"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:padding="10dp"
        swipedeck:card_spacing="5dp"
        swipedeck:max_visible="3"
        swipedeck:opacity_end="0.2"
        swipedeck:render_above="true"
        swipedeck:rotation_degrees="-15" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nope_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|center"
            android:clickable="true"
            android:elevation="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/cancel"
            android:tint="#df440c"
            android:tintMode="src_in"
            app:borderWidth="0" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/like_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"

            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|center"
            android:clickable="true"
            android:elevation="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/heart"
            android:tint="#1ded05"
            android:tintMode="src_in"
            app:borderWidth="0dp" />

    </android.support.v7.widget.LinearLayoutCompat>
</com.daprlabs.cardstack.SwipeCoordinatorLayout>
