sudo apt-get update

#node
sudo apt-get install nodejs

#npm
sudo apt-get install npm

#Postrgesql
sudo apt-get install postgresql postgresql-contrib

#crear iniciar 
sudo -i -u postgres
psql -s -d -P <usrid>  #prompt para passw
createdb <usrid>
exit
psql -f createDB.sql

#Pararse en el DrTinder y correr para instalar los paquetes necesarios:
npm install

#declarar variable DATABASE_URL con los datos de base .env en el mismo directorio que index.js
ADD DATABASE_URL=postgres://<usrid>:<pass>@localhost:5432/tinder?ssl=true
PORT=8000|5000|etc

#correr shared local:
node index.js -l || node index.js --local
